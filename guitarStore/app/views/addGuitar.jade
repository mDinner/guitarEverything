extends layout 
block content 
	h2.register-header Add Guitar
	form(id="addGuitar" action="/guitarsData" method="POST" accept-charset="utf-8" ajax="true")
		.form-group
			label Brand
			input(class="form-control" type="text" name="brand" placeholder="Brand")
		.form-group
			label Type
			input(class="form-control" type="text" name="guitarType" placeholder="Guitar Type")
		.form-group
			label Model
			input(class="form-control" type="text" name="model" placeholder="Model")
		.form-group
			label Scale
			input(class="form-control" type="text" name="scale" placeholder="Scale")
		.form-group
			label Year
			input(class="form-control" type="date" name="year" placeholder="Year")
		br
		button(type="submit" class="btn btn-success") Add Guitar
	script(src="/js/jquery-1.11.3.min.js")
	script(src="/js/main.js")